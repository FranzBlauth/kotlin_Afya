<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="8dp">


    <ImageView
        android:id="@+id/area_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/buttons_backgroud_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/area_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="08dp"
        android:text="area_name"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/area_image"
        app:layout_constraintLeft_toRightOf="@+id/area_image"
        app:layout_constraintTop_toTopOf="@id/area_image" />

    <View
        android:id="@+id/view_just"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="08dp"
        android:background="@color/ktivobase"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/area_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
