<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp">
<!--    android:background="@drawable/rounded_edge"-->


    <TextView
        android:id="@+id/area_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="08dp"
        android:layout_marginTop="0dp"
        android:text="Área:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/area_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="32dp"
        android:text="area_data"
        app:layout_constraintLeft_toRightOf="@+id/area_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="08dp"
        android:layout_marginTop="06dp"
        android:text="Local:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/area_title" />

    <TextView
        android:id="@+id/place_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="06dp"
        android:layout_marginRight="32dp"
        android:text="local_data"
        app:layout_constraintLeft_toRightOf="@+id/place_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_data" />

    <TextView
        android:id="@+id/sensor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="08dp"
        android:layout_marginTop="06dp"
        android:text="Sensor:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_title" />

    <TextView
        android:id="@+id/sensor_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="06dp"
        android:layout_marginRight="32dp"
        android:textStyle="bold"
        android:text="sensor_data"
        app:layout_constraintLeft_toRightOf="@+id/place_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_data" />

    <TextView
        android:id="@+id/min_def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        android:text="minima"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/last_temp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/last_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:text="atual"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensor_title" />

    <TextView
        android:id="@+id/max_def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="46dp"
        android:inputType="numberDecimal"
        android:text="maxima"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/last_temp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/min_def_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="32dp"
        android:inputType="numberDecimal"
        android:text="Mínima Definida"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/last_temp_tilte"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/last_temp_tilte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="02dp"
        android:gravity="center"
        android:textSize="10sp"
        android:inputType="numberDecimal"
        android:text="Última Leitura"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_temp" />

    <TextView
        android:id="@+id/max_def_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="02dp"
        android:layout_marginRight="32dp"
        android:inputType="numberDecimal"
        android:textSize="10sp"
        android:text="Máxima Definida"
        app:layout_constraintBottom_toBottomOf="@id/last_temp_tilte"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="32dp"
        android:inputType="numberDecimal"
        android:text="humidity"
        android:textSize="10sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/last_date"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/last_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:text="last_date"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/min_def_title" />

    <TextView
        android:id="@+id/battery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="44dp"
        android:inputType="numberDecimal"
        android:text="battery"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/last_date"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ic_thermometer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_thermometer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/place_data" />

    <ImageView
        android:id="@+id/ic_umidity"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_umbrella"
        app:layout_constraintBottom_toBottomOf="@id/battery"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/ic_battery"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_battery"
        app:layout_constraintBottom_toBottomOf="@id/battery"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#9C9B9B"
        app:layout_constraintTop_toBottomOf="@id/last_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
